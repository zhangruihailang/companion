<p id="notice"><%= notice %></p>

<table class="table">
    <tr>
      <th>ID</th>
      <th>名称</th>
      <th>所属类别</th>
      <th colspan="3">操作</th>
    </tr>
    <tr>
     <% @my_categories.each do |category| %>
      <tr class="info">
         <td><%= category.id %></td>
        <td><%= category.name %></td>
        <%if Category.where(:id => category.parent_id).any?%>
        <td><%= Category.find(category.parent_id).name %></td>
        <%else%>
        <td></td>
        <% end%>
        <td><%= link_to '查看', category %></td>
        <td><%= link_to '编辑', edit_category_path(category) %></td>
        <td><%= link_to '删除', category, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
    
    </tr>
  </table>

<br>

<button type="button" class="btn btn-info" onclick="goto('/categories/new')">新增分类</button>

