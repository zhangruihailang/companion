<p id="notice"><%= notice %></p>

<h1>频道列表</h1>

<table >
  <thead>
    <tr>
      <th>标题</th>
      <th>简介</th>
      <th>图片</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.title %></td>
        <td><%= channel.intro %></td>
        <td>
        <%= render :partial => "shared/one_pic", :locals => { :pic => channel.picture } %>
        </td>
        <td><%= link_to '查看', channel %></td>
        <td><%= link_to '编辑', edit_channel_path(channel) ,:onclick => "goto(\"/channels/#{channel.id}/edit\")"%></td>
        <td><%= link_to '删除', channel, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- 分页 -->


<%= render :partial => "shared/pagination",
:locals => { :total_page => @total_page,
             :page_num => @page_num,
             :pre_url => "/channels?id=1",
             :tips => "还没有频道"
            } %>



<%= link_to '新建频道', new_channel_path ,:onclick => 'goto("/channels/new")'%>
