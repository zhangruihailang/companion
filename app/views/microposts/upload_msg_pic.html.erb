<%= stylesheet_link_tag  "form.min" %>
<%= stylesheet_link_tag  "image.min" %>
<%= stylesheet_link_tag  "segment.min" %>


<%= form_for(@micropost, :url => {:action => 'upload_pics'}, html: {id: 'send_message' ,multipart: true }) do |f| %>
<input name="message_id" type="hidden" value="<%= @micropost.id%>" />
<%= render 'shared/error_messages', object: f.object %>
<div class="am-panel am-panel-default">
    <div class="am-panel-bd" >
      <div class="am-g">
        <div class="am-u-sm-12 am-u-lg-12">
          <div class="ui segment">
            <p>
              <%= @micropost.content %>
            </p>
          </div>
            
            
        </div>
      </div>
      <br>
      <div class="am-g">
        <div class="am-u-sm-12 am-u-lg-12">
          <span class="am-show-md-down">
            <div class="am-form-group">
              <div class="ui tiny images">
                <% @micropost.message_pics.each do |pic|%>
                <img class="ui image" src="http://<%=pic.file.url("200x200")%>">
                <% end %>
              </div>
            </div>
          </span>
          <span class="am-hide-md-down">
            <div class="am-form-group">
               <div class="ui small images">
                <% @micropost.message_pics.each do |pic|%>
                <img class="ui image" src="http://<%=pic.file.url("400x400")%>">
                <% end %>
              </div>
            </div>
          </span>
        </div>
      </div>
       
      <div class="am-g">
        <div class="am-u-sm-12 am-u-lg-12">
          <div class="am-form-group am-form-file">
            <button type="button" class="am-btn am-btn-danger am-btn-sm">
              <i class="am-icon-cloud-upload"></i> 选择要上传的图片</button>
              <input multiple=true type="file" name="files[]" id="micropost_avatars" />
          </div>
          <div id="file-list"></div>
        </div>
      </div>
      
      
      
      <div class="am-g">
        <div class="am-u-sm-6 am-u-lg-6">
          <% if @micropost.message_pics.any? %>
          <button type="button" class="am-btn am-btn-primary am-btn-block" onclick="return validate();" >继续上传</button>
          <%else%>
          <button type="button" class="am-btn am-btn-primary am-btn-block" onclick="return validate();" >上传</button>
          <%end%>
        </div>
        <div class="am-u-sm-6 am-u-lg-6">
          <button type="button" class="am-btn am-btn-primary am-btn-block" onclick="goto('/')" >完成</button>
        </div>
      </div>
    </div>
</div>
<% end %>


