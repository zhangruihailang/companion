                <% if @micropost.user.interests%>
                <% @micropost.user.interests.split('||').each do |interest| %>
                <span class="am-badge am-badge-primary am-radius"><%= interest%></span>
                <% end%>
                <%end%>
                    
                
            </div>
          </span>
          <span class="am-hide-md-down">
                        <div style="font-size: 1.6rem;"><strong><%= @micropost.user.name%></strong> &nbsp;&nbsp;<%= @micropost.user.sex%>&nbsp;&nbsp;<%= @micropost.user.age%>岁</div>
            <div style="-webkit-font-smoothing: subpixel-antialiased; -moz-osx-font-smoothing: auto;font-size:1rem;">
